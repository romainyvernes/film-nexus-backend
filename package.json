{
  "name": "film-nexus-backend",
  "version": "1.0.0",
  "author": {
    "name": "Romain Yvernes"
  },
  "private": true,
  "nodemonConfig": {
    "exec": "babel-node ./server/bin/www",
    "watch": [
      "server/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "./utils",
      "./config"
    ],
    "globalSetup": "./server/__tests__/config/globalSetup.js",
    "globalTeardown": "./server/__tests__/config/globalTeardown.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "scripts": {
    "start": "npm run build && npm run server",
    "build": "npm run transpile",
    "server": "node ./dist-server/bin/www",
    "transpile": "babel ./server --delete-dir-on-start --out-dir dist-server",
    "watch:dev": "nodemon",
    "test": "NODE_ENV=test && jest --verbose --runInBand --forceExit"
  },
  "dependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "bcrypt": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@babel/node": "^7.22.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0"
  }
}
